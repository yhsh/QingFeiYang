<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiayiye.yhsh.yhsh">

    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".NewsDetailActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity android:name=".PlayMusicActivity" />
        <activity
            android:name=".BigPictureActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" />
        <activity
            android:name=".PlayMusicNewActivity"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />
        <activity android:name=".AboutYHSHActivity" />
        <activity android:name=".SmallToolsActivity" />
        <activity android:name=".TrainSearchActivity" />
        <activity android:name=".SearchSongActivity" />
        <activity android:name=".SearchMVActivity" />
        <activity
            android:name=".PlayMVActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" />
    </application>

</manifest>