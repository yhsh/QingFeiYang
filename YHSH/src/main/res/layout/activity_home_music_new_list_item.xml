<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/home_music_new_list_item_iv_sing_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/home_music_new_list_item_tv_sing_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌曲：" />

        <TextView
            android:id="@+id/home_music_new_list_item_tv_singer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌手：" />

        <TextView
            android:id="@+id/home_music_new_list_item_tv_sing_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌曲时长：" />
    </LinearLayout>
</LinearLayout>