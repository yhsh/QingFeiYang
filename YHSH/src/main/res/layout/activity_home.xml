<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_replace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:background="@color/beige"
        android:clickable="true"
        android:typeface="monospace"
        android:textColor="@color/red"
        android:padding="5dp"
        android:id="@+id/home_tv_pmd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发动机和房管局电饭锅任何人挺好，真64核杀毒引擎，超神速度，打开7次可以召唤神龙，辅助杀毒！！！"
        android:singleLine="true"
        android:focusable="true"
        android:ellipsize="marquee"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever" />

    <RadioGroup
        android:id="@+id/rg_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_button_bg"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_move"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_button_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="电影" />

        <RadioButton
            android:id="@+id/rb_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_button_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="新闻" />

        <RadioButton
            android:id="@+id/rb_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_button_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="音乐" />

        <RadioButton
            android:id="@+id/rb_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_button_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="搞笑" />
    </RadioGroup>
</LinearLayout>
